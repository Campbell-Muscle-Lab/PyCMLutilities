{
    "layout":
    {
        "fig_width": 6,
        "top_margin": 0,
        "left_margin": 0,
        "right_margin": 0,
        "panel_height": 2,
        "grid_wspace": -0.5
    },
    "x_display":{
        "global_x_field": "time",
        "global_x_ticks": [20,25],
        "label": "Time (s)"
    },
    "formatting":
    {
        "x_label_fontsize": 12,
        "y_label_fontsize": 12,
        "text_fontsize":12,
        "tick_fontsize": 12,
        "title_fontsize": 12,
        "legend_fontsize": 10,
        "y_label_pad": 40,
        "legend_bbox_to_anchor": [1.0, 1.05],
        "patch_alpha": 0.5,
        "data_linewidth": 1,
        "palette":"muted"
    },  
    "animation":
    {
        "start_index": 40000,
        "stop_index":50000,
        "skip_frames": 200,
        "time_counter":
        [
            {
                "panel": 0,
                "x_coord": 25,
                "y_coord": 0.8
            }
        ]
    },
    "panels":
    [
        
        {
            "column": 1,
            "y_info":
            {
                "label":"Ca\ntransient",
                "scaling_type": "close_fit",
                "ticks":[0,1],
                "series":
                [
                    {
                        "field": "Ca_cytosol",
                        "scaling_factor": 1e6
                    }

                ]
            }
        },
        {
            "column": 1,
            "y_info":
            {
                "label": "Heart\nrate\n(BPM)",
                "scaling_type": "close_fit",
                "ticks":[60,80],
                "series":
                [
                    {
                        "field": "heart_rate"
                    }
                ]
            }
        },
        {
            "column": 1,
            "y_info":
            {
                "label": "Blood\npressure\n(mm Hg)",
                "scaling_type": "close_fit",
                "ticks":[0,130],
                "series":
                [
                    {
                        "field": "pressure_ventricle",
                        "field_label": "Ventricle"
                    },
                    {
                        "field": "pressure_aorta",
                        "field_label": "Aorta"
                    },
                    {
                        "field": "pressure_arteries",
                        "field_label": "Arteries"
                    },
                    {
                        "field": "pressure_arterioles",
                        "field_label": "Arterioles"
                    },
                    {
                        "field": "pressure_capillaries",
                        "field_label": "Cappilaries"
                    },
                    {
                        "field": "pressure_venules",
                        "field_label": "Venules"
                    },
                    {
                        "field": "pressure_veins",
                        "field_label": "Veins"
                    }
                ]
            }
        },
        {
            "column": 1,
            "y_info":
            {
                "label": "Half-sarcomeres\nlength\n(nm)",
                "scaling_type": "close_fit",
                "ticks":[600,1200],
                "series":
                [
                    {
                        "field": "hs_length"
                    }
                ]
            }
        }
    ]
}
