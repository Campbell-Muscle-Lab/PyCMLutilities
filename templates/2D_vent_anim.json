{
    "layout":
    {
        "fig_width": 5,
        "top_margin": 0,
        "left_margin": 0,
        "right_margin": 0,
        "panel_height": 4,
        "grid_wspace": -0.5
    },
    "x_display":{
        "global_x_field": "time",
        "global_x_ticks": [20,25],
        "label": "Time (s)"
    },
    "formatting":
    {
        "x_label_fontsize": 12,
        "y_label_fontsize": 12,
        "text_fontsize":12,
        "tick_fontsize": 12,
        "title_fontsize": 12,
        "legend_fontsize": 10,
        "y_label_pad": 40,
        "legend_bbox_to_anchor": [1.0, 1.05],
        "patch_alpha": 0.5,
        "data_linewidth": 1,
        "palette":"muted"
    },  
    "animation":
    {
        "start_index": 40000,
        "stop_index":50000,
        "skip_frames": 200,
        "time_counter":
        [
            {
                "panel": 0,
                "x_coord": -90,
                "y_coord": 90
            }
        ],
        "ventricle_animation":
        {
            "ext_radius": "external_radius",
            "int_radius": "internal_radius",
            "tick": 100,
            "panels":
            [
                {
                    "type": "basal",
                    "references":
                    [
                        {
                            "type": "end_diastolic",
                            "index_range": [300,500]
                        }
                    ]
                
                },
                {
                    "type": "longitudinal",
                    "references":
                    [
                        {
                            "type": "end_diastolic",
                            "index_range": [300,500]
                        }
                    ]
                
                }
            ]
        }
    }
}
