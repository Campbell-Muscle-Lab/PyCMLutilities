                        "field_label": "Medium Env"
                    },
                    {
                        "field": "medium_wave",
                        "field_label": "Medium Line"
                    }
                ]
            }
        },
        {
            "column": 2,
            "y_info":
            {
                "label": "Mixture",
                "series":
                [
                    {
                        "field": "wave_mix",
                        "style": "envelope",
                        "field_label": "Envelope"
                    },
                    {
                        "field": "wave_mix",
                        "field_label": "Line"
                    },
                    {
                        "field": "medium_wave",
