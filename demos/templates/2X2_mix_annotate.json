{
    "layout":
    {
        "fig_width": 9,
        "panel_height": 1.7,
        "top_margin": 0.5,
        "right_margin": 0.5
    },
    "formatting":
    {
        "tick_fontsize": 10,
        "legend_fontsize": 8,
        "data_linewidth": 0.75,
        "y_label_pad": 20  
    },
    "x_display":
    {
        "global_x_field": "time",
        "label": "Time (s)"
    },
    "annotations":
    [
        {
            "panel": "all",
            "type": "v_line",
            "x_value": 5,
            "color": "red"
        },
        {
            "panel": 0,
            "type": "h_line",
            "y_value": 5,
            "linestyle": ":",
            "linewidth": 2,
            "color": "cyan"
        },
        {
            "panel": 0,
            "type": "text",
            "x_coord": 10,
            "y_rel_coord": 1.3,
            "label": "Horizontal line \nfor this panel",
            "label_fontsize": 8,
            "label_color": "cyan"
        },
        {
            "panel": 1,
            "type": "text",
            "x_coord": 15,
            "y_rel_coord": 0.2,
            "label": "Annotate\nhere",
            "label_fontsize": 8
        },
        {
            "panel": 2,
            "type": "box",
            "x_coord": 5,
            "width":15,
            "y_rel_coord": 1.1,
            "rel_height": 0.2,
            "linestyle": "-",
            "linewidth": 2,
            "face_color":"lightblue",
            "edge_color": "red"
        },
        {
            "panel": 2,
            "type": "text",
            "x_coord": 12.5,
            "y_rel_coord": 1.4,
            "label": "text above the box",
            "label_fontsize": 8
        },
        {
            "panel": 3,
            "type": "text",
            "x_coord": 5,
            "y_rel_coord": 1.3,
            "label": "Vertical lines \nfor all panels",
            "label_fontsize": 8,
            "label_color": "red"
        }
        
        
    ],
    "panels":
    [
        {
            "column": 1,
            "y_info":
            {
                "label": "Line",
                "series":
                [
                    {
                        "field": "wave_mix",
                        "field_label": "Wave mix"
                    }
                ]
            }
        },
        {
            "column": 2,
            "y_info":
            {
                "label": "Line\nand\nEnvelope",
                "series":
                [
                    {
                        "field": "wave_mix",
                        "style": "envelope",
                        "field_label": "Envelope"
                    },
                    {
                        "field": "wave_mix",
                        "field_label": "Line"
                    }
                ]
            }
        },
        {
            "column": 1,
            "y_info":
            {
                "label": "Mixture",
                "series":
                [
                    {
                        "field": "wave_mix",
                        "style": "envelope",
                        "field_label": "Envelope"
                    },
                    {
                        "field": "wave_mix",
                        "field_label": "Line"
                    },
                    {
                        "field": "medium_wave",
