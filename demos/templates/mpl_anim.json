{
    "layout":
    {
        "fig_width": 6,
        "top_margin": 0,
        "left_margin": 0,
        "right_margin": 0,
        "panel_height": 2,
        "grid_wspace": -0.5
    },
    "x_display":{
        "global_x_field": "time",
        "global_x_ticks": [0,5],
        "label": "Time (s)"
    },
    "formatting":
    {
        "x_label_fontsize": 12,
        "y_label_fontsize": 12,
        "text_fontsize":12,
        "tick_fontsize": 12,
        "title_fontsize": 12,
        "legend_fontsize": 10,
        "y_label_pad": 40,
        "legend_bbox_to_anchor": [1.0, 1.05],
        "patch_alpha": 0.5,
        "data_linewidth": 1,
        "palette":"muted"
    },  
    "animation":
    {
        "start_index": 0,
        "stop_index":502,
        "skip_frames": 20,
        "time_counter":
        [
            {
                "panel": 0,
                "x_coord": 5,
                "y_coord": 12
            }
        ]
    },
    "panels":
    [
        
        {
            "column": 1,
            "y_info":
            {
                "label": "Line",
                "series":
                [
                    {
                        "field": "wave_mix",
                        "field_label": "Wave mix"
                    }
                ]
            }
        }
    ]
}
